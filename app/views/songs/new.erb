<h1>Post a Song</h1>
<hr/>

<% if @song.errors.any? %>
  <div>
    <strong>Some issues with your update, Please fix this:</strong>
    <ul>
      <% @song.errors.full_song.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @song.artist %>">
  </div>

  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song.title %>">
  </div>

  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @song.url %>">
  </div>

  <div>
    <input type="Submit" value="Submit">
  </div>
</form>